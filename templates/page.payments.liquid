{{ 'customer.css' | asset_url | stylesheet_tag }}

<div class="customer account">
  <div>
    <h1>{{ 'customer.account.title' | t }}</h1>
    <a href="/account">Order History</a> | 
    <a href="/pages/subscriptions">Subscriptions</a> | 
    <a href="/pages/upcoming-deliveries">Upcoming Deliveries</a> | 
    <a href="/pages/payment-methods">Payment Methods</a> | 
    <a href="/account/addresses">Addresses</a> | 
    <a href="{{ routes.account_logout_url }}">{{ 'customer.log_out' | t }}</a>
  </div>

  <div>
    <div>

      <h2>Payment Methods</h2>
      <a href="">Add New Payment Method</a>
	  <br /><br />
      <table role="table" class="order-history">
        <thead role="rowgroup">
          <tr role="row">
            <th id="ColumnOrder" scope="col" role="columnheader">Card Type</th>
            <th id="ColumnDate" scope="col" role="columnheader">Card Number</th>
            <th id="ColumnPayment" scope="col" role="columnheader">Expires</th>
            <th id="ColumnAction" scope="col" role="columnheader">Actions</th>
          </tr>
        </thead>
        <tbody id="payment_methods_tbody" role="rowgroup">
          <tr role="row">
            <td colspan="10" style="text-align: left;">Loading...</td>
          </tr>
        </tbody>
      </table>   

    </div>
  </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<!-- jQuery Modal -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.css" />

<script>
    $(function () {
      //alert("Loading content");  
      //
         
      $.ajax({
        url: 'https://howards-folly-wine.digitact.co.uk/api/customer_payment_methods?page=1&customer.shopifyId={{customer.id}}',
        type: "GET",
        dataType: "json",
        contentType: "application/json; charset=utf-8",
        success: function (data) {
          $('#payment_methods_tbody').html("");
          if (data.length) {
            $(data).each(function (index, item) {
              //console.log(data[index].shopifyId);
              var formatter = new Intl.NumberFormat('en-US', {
                style: 'currency',
                currency: data[index].deliveryPriceCurrencyCode,
                // These options are needed to round to whole numbers if that's what you want.
                //minimumFractionDigits: 0, // (this suffices for whole numbers, but will print 2500.10 as $2,500.1)
                //maximumFractionDigits: 0, // (causes 2500.99 to be printed as $2,501)
              });         

              var row = '';
              row += '<tr role="row">';
              row += '<td';
              row += '    id="RowOrder"';
              row += '    role="cell"';
              row += '    headers="ColumnOrder"';
              row += '    data-label=""';
              row += '    >';
              row += data[index].cardBrand;
              row += '  <br />';
              row += '</td>';
              row += '<td headers="RowOrder ColumnDate" role="cell">';
              row += 'XXXX XXXX XXXX ';
      		  row += data[index].cardLastDigits;
              row += '</td>';
              row += '<td headers="RowOrder ColumnPayment" role="cell">';
              row += data[index].cardMonth;
      		  row += ' / ';
      		  row += data[index].cardYear;
              row += '</td>';
              row += '<td headers="RowOrder ColumnAction" role="cell">';
              row += '<a class="button button--primary" href="https://howards-folly-wine.digitact.co.uk/updatepaymentmethod/'+data[index].shopifyId+'">Update</a> ';
      		  row += '<a class="button button--primary" href="https://howards-folly-wine.digitact.co.uk/deletepaymentmethod/'+data[index].shopifyId+'">Delete</a>';
              row += '</td>';
              row += '</tr>';
              $('#subscription_tbody').append(row);     
            });           

          } else {
              var row = '';
              row += '<tr role="row">';
              row += '<td colspan="10" style="text-align: left;">No payment method records found</td>';
              row += '</tr>';
              $('#subscription_tbody').append(row);               
          }         
        },
        error: function (data) { alert(data.responseText); }
      });

    });  
</script>


